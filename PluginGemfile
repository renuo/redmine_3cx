source "https://rubygems.org"

group :development, :test do
  gem "factory_bot_rails", '~> 6.4'
  if RUBY_VERSION[/^\d/] < "3"
    gem "factory_bot", "< 6.4.5"
    gem "brakeman"
  else
    gem "factory_bot"
    gem "brakeman", "~> 6.1"
  end
  gem "rails-controller-testing"
  gem "benchmark"
end

case ENV['REDMINE_VERSION']
when "4.0", "4.1", "4.2"
  gem "loofah", "< 2.21.0"
  gem "blankslate"
  gem "nokogiri"
when "6.0"
  gem "rake"
end

